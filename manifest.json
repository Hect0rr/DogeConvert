{
    "manifest_version": 2,
    "name": "DogeConvert",
    "version": "1.0.0",
    "description": "Convert any currencies in DOGE (Currently support Amazon only)",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "16": "images/dogecoin-300.png",
        "48": "images/dogecoin-300.png",
        "128": "images/dogecoin-300.png"
    },
    "page_action": {
        "default_icon": {
            "16": "images/dogecoin-300.png",
            "24": "images/dogecoin-300.png",
            "32": "images/dogecoin-300.png"
        },
        "default_title": "Doge Converter",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "include_globs": [
            "*://*.amazon.*/*"
        ],
        "js": [
            "content.js"
        ]
    }],
    "permissions": [
        "activeTab",
        "declarativeContent",
        "tabs"
    ]
}